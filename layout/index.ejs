<div class="row">
    <% if (is_home()) { %>
        <%- partial('_partial/nav') %>
    <% } %>
</div>

<div class="row">
    <div class="col-12 col-lg-8 mx-0 my-0 px-0">
        <main class="card mx-2 my-2 sidebar-sticky">
            <% if (!is_home()) { %>
                <nav class="row mx-3 my-3">
                    <%- partial('_partial/breadcrumbs') %>
                </nav>
            <% } %>
            <% page.posts.each(function(item){ %>
                <div class="row mx-3 my-3">
                    <div class="col-4 mx-0 my-0 px-0">
                        <div class="flex">
                            <div class="flex-item">
                                <div class="image-trim">
                                    <img class="cover-image h-100" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || "Untitled" %>">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-8 mx-0 my-0 px-3">
                        <a href="<%- config.root %><%- item.path %>">
                            <p class="title mx-3 my-0">
                                <%- item.title || "Untitled" %>
                            </p>
                        </a>
                        <p class="date mx-3 my-0">
                            <%= item.date.format(config.date_format) %>
                        </p>
                    </div>
                </div>
                <div>
                    <%- partial('_partial/parts/holizontal_line') %>
                </div>
            <% }); %>
            <%- partial('_partial/pagination') %>
        </main>
    </div>
    <div class="col-12 col-lg-4 mx-0 my-0 px-0">
        <%- partial('_partial/aside') %>
    </div>
</div>
