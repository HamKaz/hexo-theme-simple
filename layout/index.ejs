<div class="row">
    <% if (is_home()) { %>
        <%- partial('_partial/nav') %>
    <% } %>
</div>

<div class="row">
    <div class="col-12 col-xl-8 mx-0 my-0 px-0">
        <main class="card mx-2 my-2 sidebar-sticky">
            <% if (!is_home()) { %>
                <nav class="row mx-3 my-3">
                    <%- partial('_partial/breadcrumbs') %>
                </nav>
            <% } %>
            <% page.posts.each(function(item){ %>
                <div class="row mx-3 my-3">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-12 col-sm-10 col-md-4 col-lg-4 col-xl-6 mx-auto mx-0 my-0 px-0">
                                <div class="flex">
                                    <div class="flex-item">
                                        <div class="image-trim">
                                            <img class="h-100" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || "Untitled" %>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-10 col-md-8 col-lg-8 col-xl-6 mx-auto mx-0 my-0 px-3">
                                <div class="mx-auto">
                                    <a class="mx-0 my-0" href="<%- config.root %><%- item.path %>">
                                        <%- item.title || "Untitled" %>
                                    </a>
                                </div>
                                <div class="mx-auto">
                                    <p class="date mx-0 my-0">
                                        <%= item.date.format(config.date_format) %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <%- partial('_partial/parts/holizontal_line') %>
                </div>
            <% }); %>
            <%- partial('_partial/pagination') %>
        </main>
    </div>
    <div class="col-12 col-xl-4 mx-0 my-0 px-0">
        <%- partial('_partial/aside') %>
    </div>
</div>
