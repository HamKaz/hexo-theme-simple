<div class="mx-auto mt-0 mb-2">
    <% if(page.prev || page.next) { %>
        <div class="pagination mx-auto my-2">
            <% if(page.prev) { %>
                <span class="h6 mr-1">
                    <a href="<%- config.root %><%- page.prev_link %>">
                        <i class="fa fa-long-arrow-left mr-2"></i><%= __('newer') %>
                    </a>
                </span>
            <% } %>
            <% if(page.next) { %>
                <span class="h6 ml-1">
                    <a href="<%- config.root %><%- page.next_link %>">
                        <%= __('older') %><i class="fa fa-long-arrow-right ml-2"></i>
                    </a>
                </span>
            <% } %>
        </div>
    <% } %>
</div>
