<div class="row">
    <% if (is_home()) {
        partial('_partial/nav')
    } %>
</div>

<div class="row">
    <div class="col-12 col-md-8 mx-0 my-0 px-0">

        <main class="card mx-2 my-2 sidebar-sticky">

            <% if (!is_home()) { %>
                <nav class="row mx-3 my-3">
                    <%- partial('_partial/breadcrumbs') %>
                </nav>
            <% } %>

            <% page.posts.each(function(item){ %>
                <div class="row mx-3 my-3">
                    <div class="col-12 col-lg-3 px-0">
                        <a href="<%- config.root %><%- item.path %>">
                            <%- partial('_partial/parts/image', { item: item, img_jump: true }) %>
                        </a>
                    </div>

                </div>
                <%- partial('_partial/parts/holizontal_line') %>
            <% }); %>
            <%- partial('_partial/pagination') %>
        </main>
    </div>

</div>



<div class="col-12 col-lg-9 px-0">
    <div class="h-100">

    </div>
</div>

<div class="row"
    <div class="col-4">
    </div>
</div>
