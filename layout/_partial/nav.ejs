<!-- navigation -->
<% site.pages.forEach(function(item, index) { %>
    <% if (item.categories === theme.recommendation) { %>
        <div class="col-12 col-md-4 mx-0 mt-0 mb-3 px-0">
            <nav class="card mx-2 my-2">
                <div class="row mx-3 my-3">
                    <div class="col-12 mx-0 my-0 px-0">
                        <div class="flex">
                            <div class="flex-item">
                                <figure class="image-trim">
                                    <img class="h-100" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || "Untitled" %>">
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mx-auto mx-3 my-0">
                    <%- partial('paragraph/title', { item: item,title_jump: true }) %>
                </div>
                <div class="row mx-auto mx-3 my-3">
                    <%- partial('link/read_more', { item: item }) %>
                </div>
            </nav>
        </div>
    <% }; %>
<% }); %>
