<!-- navigation -->
<% site.pages.forEach(function(item, index) { %>
    <% if (item.categories === theme.recommendation) { %>
        <div class="col-12 col-md-4 mx-0 my-0 px-0">
            <nav class="card mx-2 my-2">
                <figure class="row mx-3 my-3">
                    <%- partial('parts/image', { item: item, img_jump: true }) %>
                </figure>
                <div class="row mx-auto mx-3 my-0">
                    <%- partial('paragraph/title', { item: item,title_jump: true }) %>
                </div>
                <div class="row mx-auto mx-3 my-3">
                    <%- partial('link/read_more', { item: item }) %>
                </div>
            </nav>
        </div>
    <% }; %>
<% }); %>
