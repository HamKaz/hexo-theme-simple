<% site.pages.forEach(function(item, index) { %>
    <% if (item.categories === theme.recommendation) { %>
        <div class="col-12 col-md-4 mx-0 my-0 px-0">
            <nav class="card mx-2 my-2">
                <div class="row mx-3 mt-3 mb-0">
                    <div class="col-12 col-sm-8 col-md-12 col-lg-12 col-xl-12 mx-auto mx-0 my-0 px-0">
                        <%- partial('_partial/parts/image', { item: item, flag: 'nav' }) %>
                    </div>
                </div>
                <div class="row mx-auto mx-3 my-0">
                    <%- partial('_partial/parts/title', { item: item, flag: 'nav' }) %>
                </div>
                <div class="row mx-auto mx-3 my-3">
                    <%- partial('_partial/parts/read_more', { item: item }) %>
                </div>
            </nav>
        </div>
    <% }; %>
<% }); %>
