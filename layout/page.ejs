<%
    var items = [];
    var title = '';
    var isTagIndex = page.type === 'tags' || page.type === 'tag';
    var isCategoryIndex = page.type === 'categories' || page.type === 'category';
    var isArchiveIndex = page.type === 'archives' || page.type === 'archive';
    if (isTagIndex) {
        items = site.tags;
        title = __('tags');
    } else if (isCategoryIndex) {
        items = site.categories;
        title = __('categories');
    } else if (isArchiveIndex) {
        items = site.archives;
        title = __('archives');
    }
%>

<% if (isTagIndex || isCategoryIndex) { %>
    <!-- for tag or category -->
    <div class="row">
        <div class="col-12 col-md-8 mx-0 my-0 px-0">
            <main class="card mx-2 my-2 sidebar-sticky">
                page.ejs -> tag or cat
                <section class="row mx-3 my-3">
                    <% items.forEach(function(item){ %>
                        <div class="post-preview">
                            <a href="<%- config.root %><%- item.path %>">
                                <h1 class="post-title archive">
                                    <%- item.name || "Untitled" %>
                                </h1>
                            </a><hr><br>
                        </div>
                    <% }); %>
                </section>
            </main>
        </div>
        <div class="col-12 col-md-4 mx-0 my-0 px-0 d-none d-md-block">
            <%- partial('_partial/aside') %>
        </div>
    </div>
<% } else if (isArchiveIndex) { %>
    <!-- for archive -->
    <div class="row">
        <div class="col-12 col-md-8 mx-0 my-0 px-0">
            <main class="card mx-2 my-2 sidebar-sticky">
                page.ejs -> arc
                <section class="row mx-3 my-3">
                    <% items.forEach(function(item){ %>
                        <div class="post-preview">
                            <a href="<%- config.root %><%- item.path %>">
                                <h1 class="post-title archive">
                                    <%- item.name || "Untitled" %>
                                </h1>
                            </a><hr><br>
                        </div>
                    <% }); %>
                </section>
            </main>
        </div>
        <div class="col-12 col-md-4 mx-0 my-0 px-0 d-none d-md-block">
            <%- partial('_partial/aside') %>
        </div>
    </div>
<% } else { %>
    <!-- for else -->
    <div class="row">
      <div class="col-12 col-md-8 mx-0 my-0 px-0">
          <main class="card mx-2 my-2 sidebar-sticky">
              page.ejs arc
              <section class="row mx-3 my-3">
                  <%- partial('_partial/parts/image', { item: page, img_jump: false }) %>
              </section>
              <section class="row mx-auto mx-3 my-0">
                  <%- partial('_partial/paragraph/title', { item: page, title_jump: false }) %>
              </section>
              <% if (is_post()) { %>
                  <!-- date for post -->
                  <section class="row mx-auto mx-3 my-0">
                      <%- partial('_partial/paragraph/date', { item: page }) %>
                  </section>
              <% } %>
              <section class="row mx-3 my-0">
                  <%- partial('_partial/paragraph/content', { item: page }) %>
              </section>
          </main>
      </div>
      <div class="col-12 col-md-4 mx-0 my-0 px-0 d-none d-md-block">
        <%- partial('_partial/aside') %>
      </div>
    </div>
<% } %>
